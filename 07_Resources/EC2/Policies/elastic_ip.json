{
	"EC2ElasticIPPolicy": {
		"Type": "AWS::IAM::Policy",
		"Description": "The action AssociateAddress, doesn't no take an ARN, it needs to be *",
		"Properties": {
			"PolicyName": "Elastic_IP",
			"Roles": [
				{ "Ref": "EC2Role" }
			],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "ec2:AssociateAddress",
						"Resource": "*"
					}
				]
			}
		}
	}
}